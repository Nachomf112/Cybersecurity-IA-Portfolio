---
// components imports
import ProfileImage from "./ProfileImage.astro";
import Social from "./Social.astro";

// config import
import { ME } from '@/config';

const { name, profession, tagline } = ME;
---

    <div class="profile-info flex flex-col gap-2 w-full">
      <div class="info">
        <h1 class="text-xl md:text-2xl lg:text-4xl xl:text-4xl text-n900 dark:text-white">
          {name}
        </h1>

        <p class="text-sm text-n500 dark:text-n300">
          {profession}
        </p>

        <!-- Tagline bien visible -->
        <p class="text-sm md:text-base text-white font-semibold mt-1">
          {tagline}
        </p>
      </div>

      <Social />
    </div>
