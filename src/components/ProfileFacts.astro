---
import { ME } from "@/config";
const { profileFacts } = ME;
---

<div class="grid grid-cols-3 gap-6 text-center mt-8 text-sm">
  {profileFacts.map((fact) => (
    <div>
      <p class="text-2xl font-semibold text-yellow-300">
        {fact.value}+
      </p>
      <p class="mt-1 text-xs text-zinc-400">
        {fact.description}
      </p>
    </div>
  ))}
</div>
