---
import { menu } from "@/data/menu";
const pathname = Astro.url.pathname;
---

<nav class="sticky top-0 z-40 border-b border-zinc-800 bg-zinc-950/95 backdrop-blur">
  <div class="container mx-auto flex items-center justify-between py-3">
    <!-- Logo / título -->
    <a
      href="/"
      class="text-sm font-semibold tracking-tight text-yellow-300"
    >
      Portfolio
    </a>

    <!-- Links de navegación -->
    <ul class="flex items-center gap-6 text-sm font-medium">
      {menu.map((item) => (
        <li>
          <a
            href={item.href}
            class:list={[
              "transition-colors text-yellow-300 hover:text-yellow-200",
              {
                "underline decoration-2 underline-offset-8":
                  pathname === item.href,
              },
            ]}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>
